@using Scripts = System.Web.Optimization.Scripts

<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimal-ui">
    <title>@ViewBag.Title - Mental Capacity Act Assessment Tool</title>
    <!-- Favicon for everything else -->
    <link href="@Links.Content.Images.favicon_ico" rel="icon">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    <div id="container">
        <div class="welcome-image">
        </div>
        <div>
            <header class="section site_context">
                <div class="container">
                    <h1 class="site-title">
                        <a href="~/@MVC.Home.Name/">Surrey and Borders Partnership NHS Foundation Trust</a>
                    </h1>
                </div>
            </header>

            <div class="container">
                <div class="imageoverlap">
                    @RenderBody()
                </div>
                <hr />
                <div>
                    <footer class="section footer">
                        <div class="container">
                            <div class="row">
                                <div class="copyright col-md-6 pull-left">
                                    @{
                                        Html.RenderAction(MVC.Layout.ActionNames.Copyright, MVC.Layout.Name);
                                    }
                                </div>
                                <div class="emaillink col-md-2 pull-right">
                                    @{
                                        Html.RenderAction(MVC.Layout.ActionNames.FeedBack, MVC.Layout.Name);
                                    }
                                </div>

                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/globalize")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
