@model Sfw.Sabp.Mca.Web.ViewModels.AssessmentViewModel

@{
    ViewBag.Title = "Edit assessment";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(MVC.Assessment.Edit(), FormMethod.Post))
{
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        
        @Html.Partial(MVC.Assessment.Views._DetailsPartial, Model)

        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-default btn-submit">Edit And Continue</button>
                @Html.ActionLink("Cancel", MVC.Person.Index(), new { @class = "btn btn-default" })
            </div>

        </div>
    </div>
}

@Scripts.Render("~/bundles/assessment")